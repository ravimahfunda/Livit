<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="#EEEEEE">

        <Button
            android:textColor="#fff"
            android:background="@drawable/button_background"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textAllCaps="false"
            android:text="Lorem ipsum"
            android:fontFamily="sans-serif"
            android:elevation="2dp"/>

        <Button
            android:layout_margin="8dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/button_background"
            android:backgroundTint="#E0E0E0"
            android:layout_width="wrap_content"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Lorem ipsum"
            android:elevation="2dp"/>

        <!--Card with Icon-->
        <LinearLayout
            android:background="#fafafa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle=""
                    android:textSize="16sp"
                    android:text="Lorem Ipsum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:textStyle=""
                    android:textSize="14sp"
                    android:text="Lorem Ipsum sit dolor amet asdkasdasdkashda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"/>
            </LinearLayout>

            <ImageView
                android:background="@drawable/ic_directions_run_black_24dp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        </LinearLayout>


        <!--Card with picture-->
        <LinearLayout
            android:background="#fafafa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="2dp">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/mountain"
                android:layout_gravity="center"
                android:layout_width="102sp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:textStyle=""
                    android:textSize="14sp"
                    android:text="Lorem Ipsum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:textStyle=""
                    android:textSize="12sp"
                    android:text="Lorem Ipsum sit dolor amet. Lorem Ipsum sit dolor amet."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>

        </LinearLayout>


        <!--GRID ITEM-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#fafafa"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_directions_run_black_24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="8dp" />

                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Lorem Ipsum"
                    android:textSize="12sp"
                    android:textStyle="" />

                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Lorem Ipsum sit dolor"
                    android:textSize="10sp"
                    android:textStyle="" />
            </LinearLayout>
            <LinearLayout
                android:elevation="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#fafafa"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_directions_run_black_24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="8dp" />

                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Lorem Ipsum"
                    android:textSize="12sp"
                    android:textStyle="" />

                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Lorem Ipsum sit dolor"
                    android:textSize="10sp"
                    android:textStyle="" />
            </LinearLayout>
            <LinearLayout
                android:elevation="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#fafafa"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_directions_run_black_24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="8dp" />

                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Lorem Ipsum"
                    android:textSize="12sp"
                    android:textStyle="" />

                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Lorem Ipsum sit dolor"
                    android:textSize="10sp"
                    android:textStyle="" />
            </LinearLayout>
        </LinearLayout>

        <!--Search Bar-->
        <LinearLayout
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#fafafa"
            android:orientation="horizontal">

            <EditText
                android:hint="Search"
                android:background="#EEEEEE"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_margin="12dp"/>
            <ImageView
                android:src="@drawable/ic_search_black_24dp"
                android:tint="#fff"
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:padding="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/mountain"
                android:layout_width="64dp"
                android:layout_height="64dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
